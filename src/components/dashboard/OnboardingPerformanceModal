
import React, { useState } from 'react';
import { AnimatePresence, motion } from 'framer-motion';
import { X, ArrowRight, ArrowLeft } from 'lucide-react';
import { useExercices } from '../../hooks/useExercices'; // Assuming this hook exists
import { useRecords } from '../../hooks/useRecords'; // Assuming this hook exists
import { useBodycomp } from '../../hooks/useBodycomp'; // Assuming this hook exists

interface OnboardingPerformanceModalProps {
  isOpen: boolean;
  onClose: () => void;
  onComplete: () => void;
}

const steps = [
  { id: 'welcome', title: 'Bienvenue !' },
  { id: 'weight', title: 'Votre Poids Actuel' },
  { id: 'strength', title: 'Record de Force' },
  { id: 'explosiveness', title: 'Record d\'Explosivité' },
  { id: 'summary', title: 'Récapitulatif' },
];

const OnboardingPerformanceModal: React.FC<OnboardingPerformanceModalProps> = ({ isOpen, onClose, onComplete }) => {
  const [currentStep, setCurrentStep] = useState(0);
  const [direction, setDirection] = useState(1);
  const [isLoading, setIsLoading] = useState(false);

  // Data state
  const [weight, setWeight] = useState<string>('');
  const [strengthRecord, setStrengthRecord] = useState<{ exerciseId: string; value: string }>({ exerciseId: '', value: '' });
  const [explosiveRecord, setExplosiveRecord] = useState<{ exerciseId: string; value: string }>({ exerciseId: '', value: '' });
  
  // Hooks for data manipulation - these are placeholders for now
  const { exercices, isLoading: isLoadingExercices } = useExercices();
  const { createRecord } = useRecords();
  const { addBodyCompData } = useBodycomp();

  const strengthExercises = exercices.filter(ex => ex.qualite_cible?.toLowerCase().includes('force maximale'));
  const explosiveExercises = exercices.filter(ex => ex.qualite_cible?.toLowerCase().includes('explosivité'));

  const nextStep = () => {
    setDirection(1);
    if (currentStep < steps.length - 1) {
      setCurrentStep(currentStep + 1);
    }
  };

  const prevStep = () => {
    setDirection(-1);
    if (currentStep > 0) {
      setCurrentStep(currentStep - 1);
    }
  };
  
  const handleComplete = async () => {
    setIsLoading(true);
    try {
      // This logic will need to be adapted based on actual hook implementations
      if (weight) {
        await addBodyCompData({ poids_kg: parseFloat(weight) });
      }
      if (strengthRecord.exerciseId && strengthRecord.value) {
        await createRecord({ 
          exercice_id: strengthRecord.exerciseId, 
          value: parseFloat(strengthRecord.value), 
          date: new Date().toISOString().split('T')[0]
        });
      }
      if (explosiveRecord.exerciseId && explosiveRecord.value) {
         await createRecord({ 
          exercice_id: explosiveRecord.exerciseId, 
          value: parseFloat(explosiveRecord.value), 
          date: new Date().toISOString().split('T')[0]
        });
      }
      onComplete();
    } catch(error) {
      console.error("Failed to save onboarding data", error);
    } finally {
      setIsLoading(false);
    }
  };

  const renderStepContent = () => {
    switch (steps[currentStep].id) {
      case 'welcome':
        return (
          <div className="text-center">
            <h3 className="text-xl font-bold mb-2">Débloquez votre Indice de Performance</h3>
            <p className="text-gray-600 dark:text-gray-300">
              En quelques étapes rapides, nous allons calculer votre score Poids/Puissance initial.
            </p>
          </div>
        );
      case 'weight':
        return (
          <div>
            <label className="block text-sm font-medium mb-2">Votre poids (kg)</label>
            <input
              type="number"
              value={weight}
              onChange={(e) => setWeight(e.target.value)}
              placeholder="Ex: 75.5"
              className="w-full bg-gray-100 dark:bg-gray-700 rounded-lg p-3 text-center text-lg"
            />
          </div>
        );
      case 'strength':
         return (
          <div>
            <label className="block text-sm font-medium mb-1">Exercice de Force Max.</label>
            <select 
              value={strengthRecord.exerciseId}
              onChange={e => setStrengthRecord(s => ({...s, exerciseId: e.target.value}))}
              className="w-full bg-gray-100 dark:bg-gray-700 rounded-lg p-3 mb-3"
            >
              <option value="">Sélectionnez...</option>
              {strengthExercises.map(ex => <option key={ex.id} value={ex.id}>{ex.nom}</option>)}
            </select>
            <label className="block text-sm font-medium mb-1">Record (1RM en kg)</label>
            <input
              type="number"
              value={strengthRecord.value}
              onChange={e => setStrengthRecord(s => ({...s, value: e.target.value}))}
              placeholder="Ex: 120"
              className="w-full bg-gray-100 dark:bg-gray-700 rounded-lg p-3"
            />
          </div>
        );
      case 'explosiveness':
         return (
          <div>
            <label className="block text-sm font-medium mb-1">Exercice d'Explosivité</label>
            <select
              value={explosiveRecord.exerciseId}
              onChange={e => setExplosiveRecord(s => ({...s, exerciseId: e.target.value}))}
              className="w-full bg-gray-100 dark:bg-gray-700 rounded-lg p-3 mb-3"
            >
               <option value="">Sélectionnez...</option>
              {explosiveExercises.map(ex => <option key={ex.id} value={ex.id}>{ex.nom}</option>)}
            </select>
            <label className="block text-sm font-medium mb-1">Record (cm)</label>
            <input
              type="number"
              value={explosiveRecord.value}
              onChange={e => setExplosiveRecord(s => ({...s, value: e.target.value}))}
              placeholder="Ex: 60"
              className="w-full bg-gray-100 dark:bg-gray-700 rounded-lg p-3"
            />
          </div>
        );
      case 'summary':
        return (
          <div className="text-left">
            <h3 className="text-xl font-bold mb-4 text-center">Prêt à calculer ?</h3>
            <ul className="space-y-2">
              <li className="flex justify-between"><span>Poids:</span> <strong>{weight || 'N/A'} kg</strong></li>
              <li className="flex justify-between"><span>Record Force:</span> <strong>{strengthRecord.value || 'N/A'} kg</strong></li>
              <li className="flex justify-between"><span>Record Explo:</span> <strong>{explosiveRecord.value || 'N/A'} cm</strong></li>
            </ul>
            <p className="text-xs text-gray-500 mt-4 text-center">Vous pourrez toujours modifier ces informations plus tard.</p>
          </div>
        );
      default:
        return null;
    }
  };

  const variants = {
    enter: (direction: number) => ({
      x: direction > 0 ? 300 : -300,
      opacity: 0
    }),
    center: {
      x: 0,
      opacity: 1
    },
    exit: (direction: number) => ({
      x: direction < 0 ? 300 : -300,
      opacity: 0
    })
  };

  return (
    <AnimatePresence>
      {isOpen && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          className="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4"
          onClick={onClose}
        >
          <motion.div
            className="bg-white dark:bg-gray-800 rounded-2xl shadow-lg w-full max-w-md p-6 relative text-gray-900 dark:text-white"
            onClick={(e) => e.stopPropagation()}
            initial={{ scale: 0.9 }} animate={{ scale: 1 }} exit={{ scale: 0.9 }}
          >
            <div className="flex justify-between items-center mb-4">
               <h2 className="text-lg font-bold">{steps[currentStep].title}</h2>
               <div className="flex items-center space-x-2">
                 {steps.map((step, index) => (
                   <div key={step.id} className={`w-2 h-2 rounded-full ${currentStep >= index ? 'bg-indigo-600' : 'bg-gray-300 dark:bg-gray-600'}`}></div>
                 ))}
               </div>
            </div>

            <div className="h-48 flex items-center justify-center">
              <AnimatePresence initial={false} custom={direction}>
                <motion.div
                  key={currentStep}
                  custom={direction}
                  variants={variants}
                  initial="enter"
                  animate="center"
                  exit="exit"
                  transition={{ type: "spring", stiffness: 300, damping: 30 }}
                  className="w-full"
                >
                  {renderStepContent()}
                </motion.div>
              </AnimatePresence>
            </div>

            <div className="flex justify-between mt-6">
              <button onClick={prevStep} disabled={currentStep === 0} className="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 disabled:opacity-50">
                <ArrowLeft size={20}/>
              </button>
              {currentStep < steps.length - 1 ? (
                <button onClick={nextStep} className="bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg flex items-center">
                  Suivant <ArrowRight size={20} className="ml-2"/>
                </button>
              ) : (
                <button onClick={handleComplete} disabled={isLoading} className="bg-green-600 text-white font-semibold py-2 px-4 rounded-lg">
                  {isLoading ? 'Calcul en cours...' : 'Terminer'}
                </button>
              )}
            </div>
          </motion.div>
        </motion.div>
      )}
    </AnimatePresence>
  );
};

export default OnboardingPerformanceModal;
